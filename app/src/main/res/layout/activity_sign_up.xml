<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_weight="3"
    tools:context="com.tigan_lab.customer.LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck"></ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/qwe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo_rapid"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/titletxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:layout_marginTop="11dp"
            android:text="Create Account"
            android:textSize="25.3sp"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_above="@+id/llemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="23.3dp"
        android:layout_marginLeft="23.3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gray_rect"
        android:orientation="vertical">

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/sub_txt"
            android:hint="Enter Full Name"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/txt_color"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="5.3dp"
            android:layout_marginRight="5.3dp"
            android:background="@color/transperent"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llemail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="23.3dp"
        android:layout_marginLeft="23.3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gray_rect"
        android:orientation="vertical">

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/sub_txt"
            android:hint="Enter Email Id"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/txt_color"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="5.3dp"
            android:layout_marginRight="5.3dp"
            android:inputType="textEmailAddress"
            android:background="@color/transperent"/>

    </LinearLayout>
