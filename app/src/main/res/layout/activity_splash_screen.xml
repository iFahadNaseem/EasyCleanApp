<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tigan_lab.SplashScreenActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/titletxt"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_rapid"
        android:layout_gravity="center"/>
</LinearLayout>


    <TextView
        android:id="@+id/titletxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_color"
        android:text="@string/app_name"
        android:textSize="33.3sp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/mavenpro_medium"
        android:gravity="center"/>


    <TextView
        android:layout_below="@+id/titletxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16.7sp"
        android:text="Quick Service"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.0625"
        android:fontFamily="@font/sf_pro_display_light"
        android:textColor="@color/sub_txt"/>

    <com.agrawalsuneet.dotsloader.loaders.LinearDotsLoader
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:loader_animDur="300"
        app:loader_noOfDots="6"
        app:loader_circleRadius="6dp"
        app:loader_defaultColor="@color/grey"
        app:loader_selectedColor="@color/blue"
        app:loader_dotsDist="3dp"
        app:loader_expandOnSelect="false"
        app:loader_isSingleDir="false"
        app:loader_selectedRadius="10dp"
        app:loader_showRunningShadow="true" />


</RelativeLayout>
