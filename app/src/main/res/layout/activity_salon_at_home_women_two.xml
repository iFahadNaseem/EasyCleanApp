<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7f8"
    tools:context="com.tigan_lab.customer.ServicesFullDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_all_services"/>
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#efefef"></View>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                android:orientation="vertical">




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/imagevIew"></ImageView>
        <FrameLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            app:ci_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:ci_drawable_unselected="@drawable/white_view_rect1"
            app:ci_drawable="@drawable/white_view_rect"
            app:ci_height="5dp"
            app:ci_width="5dp"
            android:layout_height="28dp"/>

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.7dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="11.7dp"
            android:layout_marginBottom="10.7dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leg Waxing"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/sub_txt"
                        android:textSize="16.7sp"/>

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Rich White Chocolate Wax"-->
                        <!--android:fontFamily="@font/roboto_regular"-->
                        <!--android:layout_marginTop="12dp"-->
                        <!--android:textColor="@color/sub_txt"-->
                        <!--android:textSize="11.7sp"/>-->


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10"
                            android:textSize="20sp"
                            android:textColor="@color/sub_txt"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_15"
                            android:textSize="13.3sp"
                            android:textColor="@color/sub_txt"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/roboto_regular"/>


                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save 25%"
                            android:textSize="13.3sp"
                            android:textColor="#f97b73"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 min"
                            android:textSize="8.3sp"
                            android:textColor="@color/sub_txt"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/roboto_regular"/>


                        <ImageView
                            android:layout_width="10.3dp"
                            android:layout_height="10.3dp"
                            android:src="@drawable/ic_clock"/>
                    </LinearLayout>




                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!--<LinearLayout-->
                            <!--android:id="@+id/linear_add"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:orientation="horizontal"-->
                            <!--android:background="@drawable/blue_light_rect">-->

                            <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="Add"-->
                                <!--android:paddingLeft="19dp"-->
                                <!--android:paddingRight="19dp"-->
                                <!--android:paddingTop="5dp"-->
                                <!--android:paddingBottom="5dp"-->
                                <!--android:fontFamily="@font/roboto_regular"-->
                                <!--android:textColor="@color/blue"/>-->
                        <!--</LinearLayout>-->

                        <LinearLayout
                            android:id="@+id/linear_count"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/blue_light_rect">


                            <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_gravity="center"
                            android:background="@color/bg_gray">


                            <ImageView
                                android:id="@+id/minus"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_minus"
                                android:layout_gravity="center"/>

                            </FrameLayout>


                            <TextView
                                android:id="@+id/number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/blue"/>
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:background="@color/bg_gray">


                            <ImageView
                                android:id="@+id/plus"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_plus"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:layout_gravity="center"/>

                            </FrameLayout>
                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </FrameLayout>


        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.7dp"
            android:layout_marginRight="11.7dp"
            android:layout_marginLeft="11.7dp"
            android:layout_marginBottom="10.7dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11.7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/walkthrough_txt"
                    android:text="Brand"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16.7sp"/>

                <TextView
                    android:id="@+id/brandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Honey/ Silk"
                    android:textSize="13.3sp"
                    android:textColor="#7f8088"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.7dp"
            android:layout_marginRight="11.7dp"
            android:layout_marginLeft="11.7dp"
            android:layout_marginBottom="10.7dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11.7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/walkthrough_txt"
                    android:text="Benefits"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16.7sp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/cirlce_dot"
                        android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Honey/ Silk"
                    android:textSize="13.3sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#7f8088"
                    android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.7dp"
            android:layout_marginRight="11.7dp"
            android:layout_marginLeft="11.7dp"
            android:layout_marginBottom="10.7dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11.7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/walkthrough_txt"
                    android:text="Notes"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16.7sp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/cirlce_dot"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AC is recommend during summary season."
                        android:textSize="13.3sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#7f8088"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/cirlce_dot"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        android:textSize="13.3sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#7f8088"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/cirlce_dot"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="It is a long established fact that a reader will be distracted by the readable."
                        android:textSize="13.3sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#7f8088"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rc_heading"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow"/>

    <LinearLayout
        android:layout_above="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/check"
        android:visibility="visible"
        android:orientation="vertical"
        android:background="@drawable/shadow"/>

    <LinearLayout

        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.7dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_gradient_rect"

                android:paddingTop="8.3dp"
                android:paddingBottom="8.3dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/items"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/white_rect"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingLeft="9dp"
                    android:paddingTop="4dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="4dp"
                    android:text="2"
                    android:textColor="@color/blue_text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Save $13 on this booking"
                        android:textColor="@color/blue_text"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:textColor="@color/blue_text"
                        android:textSize="18.3sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Summary"
                    android:textColor="@color/blue_text"
                    android:textSize="15sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>
