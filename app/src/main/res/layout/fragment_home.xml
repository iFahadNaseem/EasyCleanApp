<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_banner1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            >

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/banner1"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerSlider1">
            </androidx.recyclerview.widget.RecyclerView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:visibility="gone"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">


        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPpp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service List"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="11.7dp"
            android:layout_marginBottom="11.7dp"
            android:textColor="@color/txt_color"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_popularServices"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <androidx.viewpager.widget.ViewPager
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/viewPager"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtSss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Category "
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11.7dp"
        android:layout_marginBottom="11.7dp"
        android:textColor="@color/txt_color"/>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d6cece"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/CategoryRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:visibility="visible"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="11.7dp"
        android:layout_marginRight="11.7dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        android:elevation="2dp">

        <ImageView
            android:layout_width="49.7dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginLeft="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Insuranceplan"
                android:textSize="15sp"
                android:textColor="@color/blue_text"
                android:fontFamily="@font/roboto_bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.7sp"
                android:layout_marginTop="11dp"
                android:textColor="@color/blue_text"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_text"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="right"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
