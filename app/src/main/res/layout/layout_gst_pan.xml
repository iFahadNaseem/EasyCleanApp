<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_weight="3"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar_home_sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="NIC Details"
                                android:gravity="center|left"
                                android:padding="5dp"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/txt_color"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:id="@+id/chnge1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Add"
                                android:gravity="end"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/grey"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/edit1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:gravity="end"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/grey"
                                android:layout_marginBottom="5dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgrey"></View>

                        <TextView
                            android:id="@+id/idProof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:text="NIC Number"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            />

                        <TextView
                            android:id="@+id/gstNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="3dp"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:text="---"
                            android:textColor="@color/blue_text"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/nameproof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:text="Name "
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            />

                        <TextView
                            android:id="@+id/GSTname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="---"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/blue_text"/>


                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:text="Pan Card Number"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/pancard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="---"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/blue_text"
                            android:layout_marginBottom="5dp"/>

                        <LinearLayout
                            android:id="@+id/llImg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:text="NIC Images"
                                android:gravity="center|left"
                                android:padding="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/grey"
                                android:layout_marginBottom="5dp"/>

                            <ImageView
                                android:id="@+id/frntImg"
                                android:layout_width="350dp"
                                android:layout_height="240dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:layout_marginBottom="9dp"></ImageView>
                            <ImageView
                                android:id="@+id/bckImg"
                                android:layout_width="350dp"
                                android:layout_gravity="center"
                                android:layout_height="240dp"
                                android:scaleType="fitCenter"
                                android:layout_marginBottom="5dp"></ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="3dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="PAN Details"
                                android:gravity="center|left"
                                android:padding="5dp"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/txt_color"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:id="@+id/chnge2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Add"
                                android:gravity="end"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/grey"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/edit2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:gravity="end"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/grey"
                                android:layout_marginBottom="5dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgrey"></View>




                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Bank Account Details"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/txt_color"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:id="@+id/chnge3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:gravity="end"
                            android:padding="5dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/grey"
                            android:layout_marginBottom="5dp"/>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/edit3"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:gravity="end"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/grey"
                                android:layout_marginBottom="5dp"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgrey"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:text="Account Number"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            />

                        <TextView
                            android:id="@+id/accNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="---"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/blue_text"
                            android:layout_marginBottom="3dp"/>


                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:text="Bank Name"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/bnkNme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="---"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/blue_text"
                            android:layout_marginBottom="3dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:text="Branch Code"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey" />

                        <TextView
                            android:id="@+id/ifsc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="---"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/blue_text"
                            android:layout_marginBottom="3dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:text="Name ( as registered in Bank)"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey" />

                        <TextView
                            android:id="@+id/NAme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="---"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/blue_text"
                            android:layout_marginBottom="5dp"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
