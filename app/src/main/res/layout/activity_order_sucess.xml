<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_oderhead"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="47.7dp"
                        android:layout_height="47.7dp"
                        android:layout_marginTop="16.7dp"
                        android:background="@drawable/ic_oval_gray"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_correct"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/orange"
                        android:layout_marginTop="11.7dp"
                        android:text="Booking Accepted!"
                        android:gravity="center"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12.7sp"
                        android:id="@+id/bookingid"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:gravity="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16.7dp"
                        android:background="#efefef"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11.7dp"
                        android:background="@drawable/blue_gradient_rect"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Unique ID.-"
                            android:textColor="@color/blue_text"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_text"
                            android:text=""
                            android:id="@+id/otp"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.7dp"
                        android:layout_marginRight="11.7dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arrival time of your professional"
                                android:textSize="11.7sp"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/sub_txt"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/walkthrough_txt"
                                android:textSize="15sp"
                                android:id="@+id/time"
                                android:layout_marginTop="7dp"
                                android:text=""
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>


                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/CardReview"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp">


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11.7dp"
                            android:layout_marginRight="11.7dp"
                            android:layout_marginTop="16.7dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/txt_color"
                                android:text="Services"
                                android:textSize="16.7sp"
                                android:fontFamily="@font/sf_pro_display_medium"/>










                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e2e2e2"/>




                            <androidx.recyclerview.widget.RecyclerView

                                android:layout_width="match_parent"
                                android:id="@+id/rc_list"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>



                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.7dp"
                        android:layout_marginRight="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Summary"
                            android:textColor="@color/txt_color"
                            android:textSize="16.7sp"
                            android:layout_marginTop="16.7dp"
                            android:fontFamily="@font/roboto_medium"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Sub total"
                                android:textColor="@color/sub_txt"
                                android:textSize="11.7sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text=""
                                android:id="@+id/subtotal"
                                android:textColor="@color/walkthrough_txt"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Payment Mode"
                                android:textColor="@color/sub_txt"
                                android:textSize="11.7sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text=""
                                android:id="@+id/mode"
                                android:textColor="@color/walkthrough_txt"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:src="@drawable/dotted_line"
                            android:layerType="software" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="13.3dp"
                            android:layout_marginBottom="16.7dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount to be Paid "
                                android:textColor="@color/txt_color"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="11.7sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:id="@+id/paid_amount"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/txt_color"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="16.7sp"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="#f4f4f4"></View>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="7dp"
                    android:id="@+id/place_service"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="Go to Bookings"
                            android:textColor="@color/orange"
                            android:textSize="17sp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>
