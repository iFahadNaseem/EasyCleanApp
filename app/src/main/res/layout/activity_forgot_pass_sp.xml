<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.ForgotPassActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTER MOBILE NUMBER"
            android:textSize="18.3sp"
            android:textColor="@color/txt_color"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otp_services_info"
                android:textSize="13.3sp"
                android:textColor="@color/sub_txt"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="26.3dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="23.3dp"
            android:layout_marginLeft="23.3dp"
            android:layout_marginBottom="10.3dp"
            android:layout_marginTop="7dp">

            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_grey">

                <EditText
                    android:id="@+id/etMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="Enter Mobile number"
                    android:drawableLeft="@drawable/ic_baseline_smartphone_24"
                    android:drawablePadding="18dp"
                    android:inputType="number"
                    android:maxLength="15"
                    android:padding="15dp"
                    android:textColor="@color/txt_color"
                    android:textColorHint="@color/sub_txt"
                    android:textSize="15sp" />


            </FrameLayout>

            <TextView
                android:id="@+id/txt_mob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-57dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Mobile Number"
                android:textColor="@color/blue_text"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16.7sp"
        android:textColor="@color/blue_text"
        android:text="Continue"
        android:textAllCaps="false"
        android:background="@drawable/backgrnd_button"
        android:layout_margin="23.3dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
