<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.7dp"
        android:layout_marginTop="1.7dp"
        android:layout_marginRight="11.7dp"
        android:layout_marginBottom="11.7dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="51.3dp"
                        android:layout_height="51.3dp"
                        android:layout_marginRight="11.7dp"
                        android:background="@drawable/girl"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Erica"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/sub_txt"
                    android:textSize="16.7sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best in Class"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/sub_txt"
                    android:textSize="11.7sp"/>
                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$10"
                        android:textSize="20sp"
                        android:textColor="@color/sub_txt"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_15"
                        android:textSize="13.3sp"
                        android:textColor="@color/sub_txt"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/roboto_regular"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save 25%"
                        android:textSize="13.3sp"
                        android:textColor="#f97b73"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11.7sp"
                                android:text="Bride :"
                                android:textColor="@color/sub_txt"
                                android:gravity="center"
                                android:layout_marginRight="30dp"
                                android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="@color/sub_txt"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_15"
                            android:textSize="13.3sp"
                            android:textColor="@color/sub_txt"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/roboto_regular"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save 25%"
                            android:textSize="13.3sp"
                            android:textColor="#f97b73"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11.7sp"
                                android:text="per Guest :"
                                android:textColor="@color/sub_txt"
                                android:gravity="center"
                                android:layout_marginRight="6dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$5"
                                android:textSize="20sp"
                                android:textColor="@color/sub_txt"
                                android:fontFamily="@font/roboto_medium"/>


                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="15sp"
                        android:textColor="@color/orange"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/roboto_regular"/>



                </LinearLayout>




                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linear_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/blue_light_rect">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:paddingLeft="19dp"
                            android:paddingRight="19dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/blue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_count"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/blue_light_rect">


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:background="@color/bg_gray">


                            <ImageView
                                android:id="@+id/minus"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_minus"
                                android:layout_gravity="center"/>

                        </FrameLayout>


                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:paddingLeft="8.5dp"
                            android:paddingRight="8.5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/blue"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_gravity="center"
                            android:background="@color/bg_gray">


                            <ImageView
                                android:id="@+id/plus"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_plus"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:layout_gravity="center"/>

                        </FrameLayout>
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>